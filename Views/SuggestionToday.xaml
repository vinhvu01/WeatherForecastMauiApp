<VerticalStackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Spacing="15"
             x:Class="WeatherForecastMauiApp.Views.SuggestionToday">

    <Border BackgroundColor="{StaticResource Tertiary}"
            Stroke="Transparent"
            StrokeThickness="1"
            HorizontalOptions="Center"
            Padding="15,4"
            >
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="60"/>
        </Border.StrokeShape>
        <Label x:Name="Suggestion"
               Text="Clear"
               TextColor="{StaticResource White}"
               HorizontalOptions="Center" WidthRequest="1500"
               FontSize="9"/>
    </Border>
    

</VerticalStackLayout>