<VerticalStackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Spacing="5"
             x:Class="WeatherForecastMauiApp.Views.SuggestionToday">

    <Label x:Name="Title" Padding="{OnIdiom Phone='0,8',Default='0,8'}"
           TextColor="{StaticResource Black}"
           Text ="SUGGESTION TODAY:"
           HorizontalOptions="Center"
           FontSize="12"/>

    <Label x:Name="Suggestion" Padding="{OnIdiom Phone='0,8',Default='0,8'}" 
           Margin="{OnIdiom Phone='50,0',Default='60,0'}"
           TextColor="{StaticResource Error}"
           HorizontalOptions="Center" WidthRequest="900"
           FontSize="15"/>

</VerticalStackLayout>